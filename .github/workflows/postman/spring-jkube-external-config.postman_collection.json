		},
		{
			"name": "GET /actuator/env/hello.greeting",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Content-Type header is application/vnd.spring-boot.actuator.v3+json\", () => {",
							"  pm.expect(pm.response.headers.get('Content-Type')).to.contain('application/vnd.spring-boot.actuator.v3+json');",
							"});",
							"",
							"pm.test(\"Body has correct greeting value\", function () {",
							"    pm.expect(pm.response.json().property.value).to.eql(pm.environment.get(\"GREETING_VALUE\"));",
							"});",
							"",
							"pm.test(\"Body has correct config source\", function () {",
							"    pm.expect(pm.response.json().property.source).to.eql(pm.environment.get(\"ACTUATOR_CONFIG_SOURCE\"))",
							"});",
							"",
							"pm.test(\"Body has correct active profile\", function () {",
							"    let jsonData = pm.response.json();",
							"    let activeProfileLength = parseInt(pm.environment.get(\"ACTUATOR_ACTIVE_PROFILE_LENGTH\"));",
							"",
							"    pm.expect(jsonData.activeProfiles.length).to.eql(activeProfileLength);",
							"",
							"    if (activeProfileLength > 0) {",
							"        pm.expect(jsonData.activeProfiles[0]).to.eql(pm.environment.get(\"ACTUATOR_ACTIVE_PROFILE\"));",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{SERVICE_URL}}/actuator/env/hello.greeting",
					"host": [
						"{{SERVICE_URL}}"
					],
					"path": [
						"actuator",
						"env",
						"hello.greeting"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
