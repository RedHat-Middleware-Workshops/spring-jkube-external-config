	"item": [
		{
			"name": "GET /hello",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Content-Type header is text/plain\", () => {",
							"  pm.expect(pm.response.headers.get('Content-Type')).to.contain('text/plain');",
							"});",
							"",
							"pm.test(\"Body is correct\", function () {",
							"    pm.response.to.have.body(pm.environment.get(\"GREETING_VALUE\") + \" World\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{SERVICE_URL}}/hello",
					"host": [
						"{{SERVICE_URL}}"
					],
					"path": [
						"hello"
					]
				}
			},
			"response": []
		},
		{
			"name": "GET /hello/Yoda",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Content-Type header is text/plain\", () => {",
